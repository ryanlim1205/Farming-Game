<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns:fx="http://javafx.com/fxml" fx:controller="main.Controllers.ConfigurationScreenController">
    <children>
        <TextField fx:id="player_name" layoutX="350.0" layoutY="200.0" onKeyReleased="#setName_text_field">
        </TextField>
        <Text layoutX="350.0" layoutY="190.0" text="Enter Name" textAlignment="CENTER">
        </Text>
        <ComboBox fx:id="difficulty_box" layoutX="350.0" layoutY="300.0" onAction="#setDifficulty_combo_box">
        </ComboBox>
        <Text layoutX="350.0" layoutY="290.0" text="Choose game difficulty" textAlignment="CENTER">
        </Text>
        <ComboBox fx:id="seed_box" layoutX="350.0" layoutY="370.0" onAction="#setSeed_combo_box">
        </ComboBox>
        <Text layoutX="350.0" layoutY="360.0" text="Which seed do you want to plant?" textAlignment="CENTER">
        </Text>
        <ComboBox fx:id="season_box" layoutX="350.0" layoutY="440.0" onAction="#setSeason_combo_box">
        </ComboBox>
        <Text layoutX="350.0" layoutY="430.0" text="Which season do you want to play on?" textAlignment="CENTER">
        </Text>
        <Button layoutX="350.0" layoutY="500.0" text="PLAY GAME" textAlignment="CENTER">
            <font>
                <Font name="Bodoni MT Bold" size="18.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
