<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns:fx="http://javafx.com/fxml" fx:controller="main.Controllers.WelcomingScreenController"
            styleClass="pane" stylesheets="@WelcomingScreen.css">
    <children>
        <Button alignment="CENTER" layoutX="350.0" layoutY="400.0"
                text="START GAME" textAlignment="CENTER" onAction="#onStartButtonClick"
                styleClass="button" stylesheets="@WelcomingScreen.css">
            <font>
                <Font name="Bodoni MT Bold" size="18.0"/>
            </font>
        </Button>
        <Button layoutX="0.0" layoutY="600.0" text="OPTIONS" onAction="#onOptionsButtonClick" styleClass="button" stylesheets="@WelcomingScreen.css">
            <font>
                <Font name="Bodoni MT Bold" size="15.0"/>
            </font>
        </Button>
        <Button layoutX="80.0" layoutY="600.0" text="EXIT GAME" onAction="#onExitButtonClick" styleClass="button" stylesheets="@WelcomingScreen.css">
            <font>
                <Font name="Bodoni MT Bold" size="15.0"/>
            </font>
        </Button>
        <Text fill="maroon" fontSmoothingType="LCD" layoutX="100" layoutY="300" text="Welcome to the FARMING GAME">
            <font>
                <Font name="Bodoni MT Bold" size="50.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
